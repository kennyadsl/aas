<h1>Listing challenges</h1>

<table>
  <tr>
    <th>Opponent</th>
    <th>Date</th>
    <th>Email</th>
    <th>Body</th>
    <th>Location</th>
    <th>Is accepted</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @challenges.each do |challenge| %>
  <tr>
    <td><%= challenge.opponent %></td>
    <td><%= challenge.date %></td>
    <td><%= challenge.email %></td>
    <td><%= challenge.body %></td>
    <td><%= challenge.location %></td>
    <td><%= challenge.is_accepted %></td>
    <td><%= link_to 'Show', challenge %></td>
    <td><%= link_to 'Edit', edit_challenge_path(challenge) %></td>
    <td><%= link_to 'Destroy', challenge, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

