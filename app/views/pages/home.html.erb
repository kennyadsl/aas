<h1>Homepage</h1>


<h2>Mission</h2>
<p>la mission la qui</p>

<h2>Una star a caso</h2>
<p><%= @player.full_name %></p>
<%= image_tag @player.paperclip.url(:thumb) %>

<%= link_to "Vedi tutte le star", :controller => "players", :action => "index" %>

<h2>News</h2>
<ul>
  <% @news.each do |new|%>
  <li>
    <p>
      <%= truncate new.body, :length => 40%>
      <br>
      <%= link_to new.link, new.link if !new.link.blank?  %>
      <br>
      <small><%= new.created_at %> </small>
    </p>
  </li>
  <% end %>
</ul>
